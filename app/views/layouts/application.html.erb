							<li><%= render :partial => 'tags/summary', :locals => {:tag => @all_time_celebs[i+6]} %></li>
						<% end %>
							<li><%= link_to "more", tags_path, :params => {:order => "count desc"} %></li>
					</ul>
					<div class="clear"></div>
				</div>
