<p>
<% post.summarize! %>
<% if post.image.nil? %>
  <%= image_tag 'default', :width => '125', :height => '125' %>
<% else %>
  <%= image_tag post.image, :width => '125', :height => '125' %>
<% end %>
<strong><%= link_to post.title, post.permalink %></strong><br/>
<%= post.summary %>
</p>
<%= h post.feed.title %>
<% for t in post.tags do %>
<%= link_to t.name, tag_path(t) %>&nbsp;
<% end %>
